<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        app:cardCornerRadius="@dimen/space_12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp"
                    android:padding="@dimen/space_6"
                    android:textAllCaps="true"
                    android:textStyle="bold"

                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/iv_delt"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:src="@drawable/cancel_48px"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_3"
                android:padding="@dimen/space_1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Bid Last Time"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/clock_48px"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_bopen"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:padding="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textAlignment="viewEnd"
                        android:layout_gravity="center"
                        android:drawablePadding="3dp"
                        tools:ignore="RtlCompat" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/clock_48px"
                        android:text="Close Bid Last Time" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_bclose"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:textAlignment="viewEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        tools:ignore="RtlCompat" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/clock_48px"
                        android:text="Open Result Time" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_oresult"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:textAlignment="viewEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkgrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/clock_48px"
                        android:text="Close Result Time" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_cresult"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:textSize="16dp"
                        android:textAlignment="viewEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Ok"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space_10"
                android:id="@+id/btn_ok"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>