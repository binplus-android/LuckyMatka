<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GameListActivity"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/background_layout2"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gameSingleDigit"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="@dimen/space_5"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_single_digit_img" />

                    <ImageView
                        android:id="@+id/gameJodi"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_jodi_digit_img"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/gameSinglePanna"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_single_panna_img" />

                    <ImageView
                        android:id="@+id/gameDoublePanna"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_double_panna_img" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/gameTriplePanna"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_triple_panna_img" />

                    <ImageView
                        android:id="@+id/gameSP"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_sp_motor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/gameGroupJodi"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/logo" />
                    <ImageView
                        android:id="@+id/gameGroupPanel"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/gameDP"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_dp_motor" />
                    <ImageView
                        android:id="@+id/gameHalf"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_back"
                        android:elevation="5dp"
                        android:src="@drawable/game_half_sangam_img" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_back"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/gamefull"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_margin="@dimen/space_5"
                        android:layout_weight="1"
                        android:src="@drawable/game_full_sangam_img" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_games"/>
    </RelativeLayout>

</RelativeLayout>