    <style name="MyButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/button</item>
        <item name="android:minHeight">48dp</item>
</style>
    <style name="button">
        <!--        <item name="android:layout_width">@dimen/all_iv_size40</item>-->
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/space_10</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="MyTextview_bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserratextrabold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8.5pt</item>
    </style>

    <style name="Theme.JollyMatka.Material2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/descText</item>
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="bottomsheet" parent="Animation.Design.BottomSheetDialog">
        <item name="color">@color/white</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.JollyMatka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JollyMatka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="headingText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="descText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="appnameText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarColoredBackArrowMaterial" parent="Theme.JollyMatka.Material">
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#6200ea</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">18sp</item>\
        <item name="fontFamily">@font/mons</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="mycheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">

        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/mons</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="TextInputLayoutHintText">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>

    <style name="counterText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_10</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_10</item>
        <item name="boxStrokeWidth">@dimen/space_1</item>
    </style>
    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mons</item>
        <item name="buttonTint">@color/white</item>

    </style>
    <style name="headingTextWhite" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bidText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="hintTextColor">@color/white</item>
    </style>
    <style name="bid_autoText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:fontFamily">@font/mons</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:layout_margin">@dimen/space_10</item>
        <item name="android:textColorHint">@color/edittext_hint</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>


        <item name="hintTextColor">@color/edittext_hint</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="android:textStyle">bold</item>

        <item name="boxCornerRadiusTopEnd">@dimen/box_raddius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_raddius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_raddius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_raddius</item>
<!--        <item name="expandedHintEnabled">false</item>-->
        <!--        <item name="strokeColor">@color/edittextstroke</item>-->
        <!--        <item name="android:layout_width">match_parent</item>-->
        <!--        <item name="android:layout_height">@dimen/space_edittext</item>-->
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>


        <!--        <item name="hintAnimationEnabled">false</item>-->
        <!--        <item name="hintEnabled">true</item>-->
        <!--        <item name="boxBackgroundMode">outline</item>-->


    </style>
    --  this style for the hint text lable in textInputLayout -->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="hintTextColor">@color/edittext_hint</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="fontFamily">@font/mons</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <dimen name="box_raddius">10dp</dimen>
</resources>